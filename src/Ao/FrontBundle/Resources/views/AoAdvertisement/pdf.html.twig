{% extends 'AcfResBundle::base.html.twig' %}
{%if menu_active is not defined%}
{%set menu_active=''%}
{%endif%}
{%if smenu_active is not defined%}
{%set smenu_active=''%}
{%endif%}
{%if tabActive is not defined%}
{%set tabActive=1%}
{%endif%}
{%block static_css%}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{app.request.scheme ~'://' ~ app.request.httpHost ~ preload(asset('bundles/acfres/css/theme/AdminLTE/AdminLTE.css'))}}">
<link rel="stylesheet" type="text/css"
	href="{{app.request.scheme ~'://' ~ app.request.httpHost ~ preload(asset('bundles/acfres/css/theme/AdminLTE/skins/_all-skins.css'))}}"
>
<link rel="stylesheet" type="text/css" href="{{app.request.scheme ~'://' ~ app.request.httpHost ~ asset('bundles/acfres/css/theme/Mpdf/style.css')}}">
{%endblock static_css%}
{%block html_body%}
<body class="skin-blue">
	<div class="wrapper">
		<div class="content-wrapper2">
			<section id="content" class="content">
				<div class="row">
					<div class="col-lg-12">
						<div class="box box-primary">
							<div class="box-body table-responsive">
								<table class="table table-condensed table-borderless">
									<tr>
										<td width="50%" class="text-left" style="background-color: white;"><a href="{{ path('_front_appelsdoffres') }}" class="center-block"><img
												src="{{app.request.scheme ~'://' ~ app.request.httpHost ~ preload(asset('bundles/acfres/images/logo_ao.jpg'))}}" alt="{{ sitename }}" class="img-responsive"
												style="width: 200px"
											></a></td>
										<td width="50%" class="text-right" style="background-color: white;"><a href="{{ path('_front_homepage') }}" class="center-block"><img
												src="{{app.request.scheme ~'://' ~ app.request.httpHost ~ preload(asset('bundles/acfres/images/logo_acf.jpg'))}}" alt="{{ sitename }}" class="img-responsive"
												style="width: 200px"
											></a></td>
									</tr>
									<tr>
										<td colspan="2" class="text-center">&nbsp;</td>
									</tr>
									<tr>
										<td colspan="2" class="text-center">
											<h2 class="text-center">
												{{('AoAdvertisement.aoVe.'~advertisement.aoVe)|trans}}
												:
												{{advertisement.ref}}
											</h2></td>
									</tr>
									<tr>
										<td colspan="2" class="text-center">&nbsp;</td>
									</tr>
									{% if advertisement.description is not empty %}
									<tr>
										<td colspan="2" class="text-center" style="background-color: white;">{{advertisement.description|raw}}</td>
									</tr>
									{% endif %}
									<tr>
										<td colspan="2" class="text-center">&nbsp;</td>
									</tr>
									<tr>
										<td style="background-color: white; padding: 7px;" valign="top">
											<table class="table table-condensed table-borderless">
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.nature'|trans|raw}} :</b></td>
													<td width="54%">{% if advertisement.nature is not empty %}
													{{('AoAdvertisement.nature.'~advertisement.nature)|trans}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.country'|trans|raw}} :</b></td>
													<td width="54%">{% if advertisement.country is not empty %}
													{{advertisement.country}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.company'|trans|raw}} :</b></td>
													<td width="54%">{% if advertisement.company is not empty %}
													{{advertisement.company}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td colspan="2" class="text-center">&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.aoVe'|trans|raw}} :</b></td>
													<td width="54%">{% if advertisement.aoVe is not empty %}
													{{('AoAdvertisement.aoVe.'~advertisement.aoVe)|trans}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.typeAvis'|trans|raw}} :</b></td>
													<td width="54%">{% if advertisement.typeAvis is not empty %}
													{{('AoAdvertisement.typeAvis.'~advertisement.typeAvis)|trans}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td colspan="2" class="text-center">&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.dtOpen'|trans|raw}} :</b></td>
													<td width="54%">{% if advertisement.dtOpen is not empty %}
													{{advertisement.dtOpen|localeDate('medium')}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td colspan="2" class="text-center">&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.adress'|trans|raw}} :</b></td>
													<td width="54%">{% if advertisement.adress is not empty %}
													{{advertisement.adress}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.price'|trans|raw}} :</b></td>
													<td width="54%">{% if advertisement.price is not empty %}
													{{advertisement.price}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
											</table>
										</td>
										<td style="background-color: white; padding: 7px;" valign="top">
											<table class="table table-condensed table-borderless">
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.categ'|trans|raw}} :</b></td>
													<td width="54%">{{ advertisement.grp.categ.title }}
													&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.grp'|trans|raw}} :</b></td>
													<td width="54%">{{ advertisement.grp.title }}
													&nbsp;</td>
												</tr>
												<tr>
													<td colspan="2" class="text-center">&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.dtPublication'|trans|raw}} :</b></td>
													<td width="54%">{% if advertisement.dtPublication is not empty %}
													{{advertisement.dtPublication|localeDate('full')}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.dtEnd'|trans|raw}} :</b></td>
													<td width="54%">{% if advertisement.dtEnd is not empty %}
													{{advertisement.dtEnd|localeDate('full')}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td colspan="2" class="text-center">&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.source'|trans|raw}} :</b></td>
													<td width="54%">{% if advertisement.source is not empty %}
													{{advertisement.source}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAdvertisement.addRef'|trans|raw}} :</b></td>
													<td width="54%">{% if advertisement.addRef is not empty %}
													{{advertisement.addRef}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
											</table>
											<br>
										</td>
									</tr>
									{% if advertisement.img is not empty %}
									<tr>
										<td colspan="2" class="text-center">&nbsp;</td>
									</tr>
									<tr>
										<td colspan="2" class="text-center"><img src="{{app.request.scheme ~'://' ~ app.request.httpHost ~ asset('/res/AoVe/'~advertisement.img)}}"
											class="img-responsive img-thumbnail center-block"
										></td>
									</tr>
									{% endif %}
								</table>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
		<footer class="main-footer2">
			<strong>Copyright &copy; {{ 'now'|date('Y') }} <a href="{{ url('_front_homepage') }}">ACEF-expert</a>.
			</strong> All rights reserved.
		</footer>
	</div>
</body>
{%endblock html_body%}
