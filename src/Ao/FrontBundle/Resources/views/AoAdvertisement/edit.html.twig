{% extends 'AcfFrontBundle::front2.html.twig' %}
{%block static_css%} {{ parent() }}
{%endblock static_css%}
{%block end_static_js%}
{{ parent() }}
{%endblock end_static_js%}
{%block end2_dynamic_jstxt%}
$(function() {

});
{%endblock end2_dynamic_jstxt%}
{%block breadcrumb%}
<ol class="breadcrumb">
	<li><a href="{{ path('ao_front_homepage') }}">{{ faIco('dashboard') }} &nbsp; {{'breadcrumb.ao'|trans|raw}}</a></li>
	<li><a href="{{ path('ao_front_categ_editGet', {'uid': advertisement.grp.categ.id}) }}">{{faIco('object-ungroup')}} &nbsp; {{advertisement.grp.categ.title}}</a></li>
	<li><a href="{{ path('ao_front_subcateg_editGet', {'uid': advertisement.grp.id}) }}">{{faIco('object-group')}} &nbsp; {{advertisement.grp.ref}} : {{advertisement.grp.title}}</a></li>
	<li class="active"><a href="{{ path('ao_front_advertisement_editGet', {'uid': advertisement.id}) }}">{{faIco('newspaper-o')}} {{('AoAdvertisement.aoVe.'~advertisement.aoVe)|trans}} &nbsp; {{ advertisement.ref}}</a></li>
</ol>
{%endblock breadcrumb%}
{%block content%}
<div class="row">
	<div class="col-lg-12">
		<div class="well well-sm text-right">
			<a href="{{ path('ao_front_advertisement_pdf', {'uid': advertisement.id}) }}" class="btn btn-primary">{{ faIco('file-pdf-o') }} {{ 'action.btnPdf'|trans }}</a>
		</div>
		<div class="box">
			<div class="box-header">
				<h3 class="box-title">{{('AoAdvertisement.aoVe.'~advertisement.aoVe)|trans}} &nbsp; {{advertisement.ref}}</h3>
			</div>
			<div class="box-body">
				{% if advertisement.description is not empty %}
				<div class="row">
					<div class="col-lg-12">{{advertisement.description|raw}}&nbsp;</div>
					<div class="col-lg-12">&nbsp;</div>
				</div>
				<br>
				{% endif %}
				<div class="row">
					<div class="col-lg-6">
						<div class="row">
							<div class="col-lg-4"><b>{{'AoAdvertisement.nature'|trans|raw}} :</b></div>
							<div class="col-lg-8">{% if advertisement.nature is not empty %}{{('AoAdvertisement.nature.'~advertisement.nature)|trans}}{%else%}{{'_NA'|trans}}{% endif %}&nbsp;</div>
							<div class="col-lg-4"><b>{{'AoAdvertisement.country'|trans|raw}} :</b></div>
							<div class="col-lg-8">{% if advertisement.country is not empty %}{{advertisement.country}}{%else%}{{'_NA'|trans}}{% endif %}&nbsp;</div>
							<div class="col-lg-4"><b>{{'AoAdvertisement.company'|trans|raw}} :</b></div>
							<div class="col-lg-8">{% if advertisement.company is not empty %}{{advertisement.company}}{%else%}{{'_NA'|trans}}{% endif %}&nbsp;</div>
							<div class="col-lg-12">&nbsp;</div>
						</div>
						<div class="row">
							<div class="col-lg-4"><b>{{'AoAdvertisement.aoVe'|trans|raw}} :</b></div>
							<div class="col-lg-8">{% if advertisement.aoVe is not empty %}{{('AoAdvertisement.aoVe.'~advertisement.aoVe)|trans}}{%else%}{{'_NA'|trans}}{% endif %}&nbsp;</div>
							<div class="col-lg-4"><b>{{'AoAdvertisement.typeAvis'|trans|raw}} :</b></div>
							<div class="col-lg-8">{% if advertisement.typeAvis is not empty %}{{('AoAdvertisement.typeAvis.'~advertisement.typeAvis)|trans}}{%else%}{{'_NA'|trans}}{% endif %}&nbsp;</div>
							<div class="col-lg-12">&nbsp;</div>
						</div>
						<div class="row">
							<div class="col-lg-4"><b>{{'AoAdvertisement.dtOpen'|trans|raw}} :</b></div>
							<div class="col-lg-8">{% if advertisement.dtOpen is not empty %}{{advertisement.dtOpen|localeDate('medium')}}{%else%}{{'_NA'|trans}}{% endif %}&nbsp;</div>
							<div class="col-lg-12">&nbsp;</div>
						</div>
						<div class="row">
							<div class="col-lg-4"><b>{{'AoAdvertisement.adress'|trans|raw}} :</b></div>
							<div class="col-lg-8">{% if advertisement.adress is not empty %}{{advertisement.adress}}{%else%}{{'_NA'|trans}}{% endif %}&nbsp;</div>
							<div class="col-lg-4"><b>{{'AoAdvertisement.price'|trans|raw}} :</b></div>
							<div class="col-lg-8">{% if advertisement.price is not empty %}{{advertisement.price}}{%else%}{{'_NA'|trans}}{% endif %}&nbsp;</div>
							<div class="col-lg-12">&nbsp;</div>
						</div>
					</div>
					<div class="col-lg-6">
						<div class="row">
							<div class="col-lg-4"><b>{{'AoAdvertisement.categ'|trans|raw}} :</b></div>
							<div class="col-lg-8"><a href="{{ path('ao_front_categ_editGet', {'uid': advertisement.grp.categ.id}) }}">{{ advertisement.grp.categ.title }}</a>&nbsp;</div>
							<div class="col-lg-4"><b>{{'AoAdvertisement.grp'|trans|raw}} :</b></div>
							<div class="col-lg-8"><a href="{{ path('ao_front_subcateg_editGet', {'uid': advertisement.grp.id}) }}">{{ advertisement.grp.ref }} : {{ advertisement.grp.title }} </a>&nbsp;</div>
							<div class="col-lg-12">&nbsp;</div>
						</div>
						<div class="row">
							<div class="col-lg-4"><b>{{'AoAdvertisement.dtPublication'|trans|raw}} :</b></div>
							<div class="col-lg-8">{% if advertisement.dtPublication is not empty %}{{advertisement.dtPublication|localeDate('full')}}{%else%}{{'_NA'|trans}}{% endif %}&nbsp;</div>
							<div class="col-lg-4"><b>{{'AoAdvertisement.dtEnd'|trans|raw}} :</b></div>
							<div class="col-lg-8">{% if advertisement.dtEnd is not empty %}{{advertisement.dtEnd|localeDate('full')}}{%else%}{{'_NA'|trans}}{% endif %}&nbsp;</div>
							<div class="col-lg-12">&nbsp;</div>
						</div>
						<div class="row">
							<div class="col-lg-4"><b>{{'AoAdvertisement.source'|trans|raw}} :</b></div>
							<div class="col-lg-8">{% if advertisement.source is not empty %}{{advertisement.source}}{%else%}{{'_NA'|trans}}{% endif %}&nbsp;</div>
							<div class="col-lg-4"><b>{{'AoAdvertisement.addRef'|trans|raw}} :</b></div>
							<div class="col-lg-8">{% if advertisement.addRef is not empty %}{{advertisement.addRef}}{%else%}{{'_NA'|trans}}{% endif %}&nbsp;</div>
							<div class="col-lg-12">&nbsp;</div>
						</div>
					</div>
					{% if advertisement.img is not empty %}
					<div class="col-lg-12"><img src="/res/AoVe/{{advertisement.img}}" class="img-responsive center-block"></div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</div>
{%endblock content%}
