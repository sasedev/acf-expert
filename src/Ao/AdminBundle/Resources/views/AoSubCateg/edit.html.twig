{%block end2_dynamic_jstxt%}
$(function() {
	$('textarea.wysiwyg').each(function() {
		var options = {
			script_url : '{{preload(asset('bundles/acfres/js/tinymce/tinymce.min.js'))}}',
			theme: "modern",
			plugins: [ "advlist autolink lists link image charmap preview hr anchor pagebreak", "searchreplace wordcount visualblocks visualchars code fullscreen", "nonbreaking save table contextmenu directionality", "template paste textcolor" ],
			{%if app.request.locale != 'en'%}
			language : '{{ app.request.locale }}',
			{% endif %}
			toolbar: "insertfile undo redo | styleselect | bold italic | forecolor backcolor | alignleft aligncenter alignright alignjustify | preview "
		};
		$this = $(this);
		if($this.is('[required]')) {
			options.oninit = function(editor) {
				editor.on('change', function(e) {
					editor.save();
				});
			}
		}
		$this.tinymce(options);
	});
	{% if subCateg.advertisements|length != 0 %}
	$('#advertisementList').dataTable({
		{%if app.request.locale != 'en'%}
		"language": {"url": '{{preload(asset('bundles/acfres/css/dataTables/i18n/'~app.request.locale~'.json'))}}'},
		{% endif %}
		"columns": [
			null,
			null,
			null,
			null,
			null,
			null,
			{ "searchable": false, "sortable": false }
		],
		"pageLength": 10,
		fnDrawCallback : function() {
			$('.deleteConfirmAdvertisement').on("click", function(e) {
				e.preventDefault();
				var lnk = $(this).attr('href');
				modalDeleteBtn = $('#deleteConfirmAdvertisement').find('.danger');
				modalDeleteBtn.attr('href', lnk);
				$('#deleteConfirmAdvertisement').modal('show');
			});
		}
	});
	{% endif %}
	
	$('#AoSubCategUpdateCategForm_categ').chosen({width: "100%", disable_search_threshold: 10});
	
	$('#AoAdvertisementNewForm_nature').chosen({width: "100%", disable_search_threshold: 10});
	
	$('#AoAdvertisementNewForm_aoVe').chosen({width: "100%", disable_search_threshold: 10});
	
	$('#AoAdvertisementNewForm_typeAvis').chosen({width: "100%", disable_search_threshold: 10});
	
	$('#AoAdvertisementNewForm_status').chosen({width: "100%", disable_search_threshold: 10});
	
	$("#AoAdvertisementNewForm_img").fileinput({'showUpload':false, 'previewFileType':'image', browseClass: "btn btn-success", browseLabel: " Image", browseIcon: '{{glyphIco('picture')}}', removeClass: "btn btn-danger", removeLabel: "Delete", removeIcon: '{{glyphIco('trash')}}'});
	
	$('#AoAdvertisementNewForm_dtPublication').click(function( event ) {
		event.preventDefault();
		$('#AoAdvertisementNewForm_dtPublication').datetimepicker({
			weekStart: 1,
			startView: 4,
			minView: 2,
			autoclose: true,
			todayHighlight: true,
			language: "{{app.request.locale}}",
			format: 'yyyy-mm-dd'
		}).datetimepicker('show');
	});
	
	$('#AoAdvertisementNewForm_dtEnd').click(function( event ) {
		event.preventDefault();
		$('#AoAdvertisementNewForm_dtEnd').datetimepicker({
			weekStart: 1,
			startView: 4,
			minView: 2,
			autoclose: true,
			todayHighlight: true,
			language: "{{app.request.locale}}",
			format: 'yyyy-mm-dd'
		}).datetimepicker('show');
	});
	
	$('#AoAdvertisementNewForm_dtOpen').click(function( event ) {
		event.preventDefault();
		$('#AoAdvertisementNewForm_dtOpen').datetimepicker({
			weekStart: 1,
			startView: 4,
			minView: 2,
			autoclose: true,
			todayHighlight: true,
			language: "{{app.request.locale}}",
			format: 'yyyy-mm-dd'
		}).datetimepicker('show');
	});

});
{%endblock end2_dynamic_jstxt%}
{%block breadcrumb%}
<ol class="breadcrumb">
	<li><a href="{{ path('ao_admin_homepage') }}">{{ faIco('dashboard') }} &nbsp; {{'breadcrumb.admin2'|trans|raw}}</a></li>
	<li><a href="{{ path('ao_admin_categ_list') }}">{{ faIco('object-group') }} &nbsp; {{'breadcrumb.aocateg.list'|trans|raw}}</a></li>
	<li><a href="{{ path('ao_admin_categ_editGet', {'uid': subCateg.categ.id}) }}">{{glyphIco('edit')}} &nbsp; {{'breadcrumb.aocateg.edit'|trans({'%categ%': subCateg.categ.title})|raw}}</a></li>
	<li class="active"><a href="{{ path('ao_admin_subcateg_editGet', {'uid': subCateg.id}) }}">{{glyphIco('edit')}} &nbsp; {{'breadcrumb.aosubcateg.edit'|trans({'%subCateg%': subCateg.ref})|raw}}</a></li>
</ol>
{%endblock breadcrumb%}
{%block content%}
<div class="row">
	<div class="col-lg-12">
		<div class="well well-sm text-right">
			<a href="{{ path('ao_admin_categ_list') }}" class="btn btn-primary">{{ faIco('th') }} {{ 'action.list'|trans }}</a>
		</div>
		<div class="nav-tabs-custom">
			<ul class="nav nav-tabs">
				<li {%if tabActive==1%} class="active"{%endif%}><a href="#overview" data-toggle="tab">{{'AoSubCateg.tab.overview'|trans|raw}}</a></li>
				{%if is_granted('ROLE_SUPERADMIN')%}
				<li {%if tabActive==2%} class="active"{%endif%}><a href="#edit" data-toggle="tab">{{'AoSubCateg.tab.edit'|trans|raw}}</a></li>
				<li {%if tabActive==3%} class="active"{%endif%}><a href="#AddAdvertisement" data-toggle="tab">{{'AoSubCateg.tab.addAdvertisement'|trans|raw}}</a></li>
				{% endif %}
			</ul>
			<div class="tab-content">
				<div class="tab-pane fade{%if tabActive==1%} in active{%endif%}" id="overview">
					<div class="panel box box-primary">
						<div class="box-header"><h3 class="box-title">{{'AoSubCateg.tlabel.overview'|trans}}</h3></div>
						<div class="box-body">
							<div class="row">
								<div class="col-lg-3 text-right">{{'AoSubCateg.categ'|trans|raw}} :</div>
								<div class="col-lg-9"><a href="{{ path('ao_admin_categ_editGet', {'uid': subCateg.categ.id}) }}">{{subCateg.categ.title}}</a>&nbsp;</div>
								<div class="col-lg-12">&nbsp;</div>
								<div class="col-lg-3 text-right">{{'AoSubCateg.ref'|trans|raw}} :</div>
								<div class="col-lg-9">{{subCateg.ref}}&nbsp;</div>
								<div class="col-lg-12">&nbsp;</div>
								<div class="col-lg-3 text-right">{{'AoSubCateg.title'|trans|raw}} :</div>
								<div class="col-lg-9">{{subCateg.title}}&nbsp;</div>
								<div class="col-lg-12">&nbsp;</div>
								<div class="col-lg-3 text-right">{{'AoSubCateg.priority'|trans|raw}} :</div>
								<div class="col-lg-9">{{subCateg.priority}}&nbsp;</div>
								<div class="col-lg-12">&nbsp;</div>
								<div class="col-lg-3 text-right">{{'AoSubCateg.advertisements'|trans|raw}} :</div>
								<div class="col-lg-9">{{subCateg.advertisements|length}}&nbsp;</div>
								<div class="col-lg-12">&nbsp;</div>
								<div class="col-lg-3 text-right">{{'AoCateg.dtCrea'|trans|raw}} :</div>
								<div class="col-lg-9">{{subCateg.dtCrea|localeDate('medium')}} {{'_at'|trans}} {{subCateg.dtCrea|localeDate('none', 'short')}}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'AoCateg.dtUpdate'|trans|raw}} :</div>
								<div class="col-lg-9">{{subCateg.dtUpdate|localeDate('medium')}} {{'_at'|trans}} {{subCateg.dtUpdate|localeDate('none', 'short')}}&nbsp;</div>
								<br>
							</div>
						</div>
					</div>
					{% if subCateg.advertisements|length != 0 %}
					<div class="panel box">
						<div class="box-header">
							<h3 class="box-title">{{ 'AoAdvertisement.tlabel.list'|trans|raw}}</h3>
						</div>
						<div class="box-body table-responsive">
							<table id="advertisementList" class="table table-bordered table-hover">
								<thead>
									<tr>
										<th>{{ 'AoAdvertisement.dtPublication.label'|trans|raw }}</th>
										<th>{{ 'AoAdvertisement.country.label'|trans|raw }}</th>
										<th>{{ 'AoAdvertisement.description.label'|trans|raw }}</th>
										<th>{{ 'AoAdvertisement.company.label'|trans|raw }}</th>
										<th>{{ 'AoAdvertisement.nature.label'|trans|raw }}</th>
										<th>{{ 'AoAdvertisement.dtEnd.label'|trans|raw }}</th>
										<th>{{ 'action'|trans|raw }}</th>
									</tr>
								</thead>
								<tbody>
								{% if subCateg.advertisements|length != 0 %}
								{% for advertisement in subCateg.advertisements %}
									<tr>
										<td>{% if advertisement.dtPublication is not empty %}{{advertisement.dtPublication|localeDate('medium')}}{% endif %}</td>
										<td>{% if advertisement.country is not empty %}{{advertisement.country}}{% endif %}</td>
										<td>{% if advertisement.description is not empty %}{{advertisement.description|raw}}{% endif %}</td>
										<td>{% if advertisement.company is not empty %}{{advertisement.company}}{% endif %}</td>
										<td>{% if advertisement.nature is not empty %}{{('AoAdvertisement.nature.'~advertisement.nature)|trans}}{% endif %}</td>
										<td>{% if advertisement.dtEnd is not empty %}{{advertisement.dtEnd|localeDate('medium')}}{% endif %}</td>
										<td>
											<a class="btn btn-sm btn-info" href="{{path('ao_admin_advertisement_editGet',{'uid':advertisement.id})}}">{{ glyphIco('edit') }} {{ 'action.edit'|trans }}</a>
											{%if is_granted('ROLE_SUPERADMIN')%}
											<a class="btn btn-sm btn-danger deleteConfirmAdvertisement" href="{{path('ao_admin_advertisement_delete',{'uid':advertisement.id})}}">{{ glyphIco('trash') }} {{ 'action.delete'|trans }}</a>
											{% endif %}
										</td>
									</tr>
								{% endfor %}
								{% else %}
									<tr>
										<td colspan="7">{{ 'AoAdvertisement.empty'|trans|raw }}</td>
									</tr>
								{% endif %}
								</tbody>
							</table>
						</div>
					</div>
					{% endif %}
				</div>
				
				{%if is_granted('ROLE_SUPERADMIN')%}
				<div class="tab-pane fade{%if tabActive==2%} in active{%endif%}" id="edit">
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title">{{'AoSubCateg.tlabel.editRef'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(SubCategUpdateRefForm, {'method':'POST', 'action': path('ao_admin_subcateg_editPost', {'uid': subCateg.id}), 'style': 'horizontal'})}}
							{{form_row(SubCategUpdateRefForm.ref, {'label_col': 3, 'widget_col': 8})}}
							<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{glyphIco('save')}} {{'action.btnEdit'|trans|raw}}</button></div></div>
							{{form_end(SubCategUpdateRefForm)}}
						</div>
					</div>
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title">{{'AoSubCateg.tlabel.editTitle'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(SubCategUpdateTitleForm, {'method':'POST', 'action': path('ao_admin_subcateg_editPost', {'uid': subCateg.id}), 'style': 'horizontal'})}}
							{{form_row(SubCategUpdateTitleForm.title, {'label_col': 3, 'widget_col': 8})}}
							<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{glyphIco('save')}} {{'action.btnEdit'|trans|raw}}</button></div></div>
							{{form_end(SubCategUpdateTitleForm)}}
						</div>
					</div>
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title">{{'AoSubCateg.tlabel.editCateg'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(SubCategUpdateCategForm, {'method':'POST', 'action': path('ao_admin_subcateg_editPost', {'uid': subCateg.id}), 'style': 'horizontal'})}}
							{{form_row(SubCategUpdateCategForm.categ, {'label_col': 3, 'widget_col': 8})}}
							<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{glyphIco('save')}} {{'action.btnEdit'|trans|raw}}</button></div></div>
							{{form_end(SubCategUpdateCategForm)}}
						</div>
					</div>
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title">{{'AoSubCateg.tlabel.editPriority'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(SubCategUpdatePriorityForm, {'method':'POST', 'action': path('ao_admin_subcateg_editPost', {'uid': subCateg.id}), 'style': 'horizontal'})}}
							{{form_row(SubCategUpdatePriorityForm.priority, {'label_col': 3, 'widget_col': 8})}}
							<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{glyphIco('save')}} {{'action.btnEdit'|trans|raw}}</button></div></div>
							{{form_end(SubCategUpdatePriorityForm)}}
						</div>
					</div>
				</div>
				
				
				<div class="tab-pane fade{%if tabActive==3%} in active{%endif%}" id="AddAdvertisement">
					<div class="panel box box-primary">
						<div class="box-header">
							<h3 class="box-title">{{ 'AoAdvertisement.tlabel.add'|trans|raw}}</h3>
						</div>
						<div class="box-body">
							{{form_start(AdvertisementNewForm, {'method':'POST', 'action': path('ao_admin_subcateg_editPost', {'uid': subCateg.id}), 'style': 'horizontal'})}}
							{{form_row(AdvertisementNewForm.grp, {'label_col': 3, 'widget_col': 8, 'attr': {'row_class': 'hidden'} })}}
							{{form_row(AdvertisementNewForm.img, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.dtPublication, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.country, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.description, {'label_col': 3, 'widget_col': 8, 'attr': {'class':'wysiwyg'}})}}
							{{form_row(AdvertisementNewForm.company, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.nature, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.dtEnd, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.aoVe, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.dtOpen, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.adress, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.price, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.typeAvis, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.addRef, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.source, {'label_col': 3, 'widget_col': 8})}}
							{{form_row(AdvertisementNewForm.status, {'label_col': 3, 'widget_col': 8})}}
							<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{glyphIco('save')}} {{'action.btnAdd'|trans|raw}}</button></div></div>
							{{form_end(AdvertisementNewForm)}}
						</div>
					</div>
				</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>
<div id="deleteConfirmAdvertisement" class="modal fade in" tabindex="-1" style="display: none;">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h3 class="text-center">{{'AoAdvertisement.delete.confirm.title'|trans|raw}}</h3>
	</div>
	<div class="modal-body">
		{{'AoAdvertisement.delete.confirm.txt'|trans|raw}}
	</div>
	<div class="modal-footer">
		<a href="" class="btn btn-xs btn-danger danger">{{'_yes'|trans|raw}}</a>
		<button type="button" class="btn btn-xs btn-default" data-dismiss="modal">{{'_no'|trans|raw}}</button>
	</div>
</div>
{%endblock content%}
