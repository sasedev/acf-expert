{% extends 'AcfResBundle::base.html.twig' %}
{%if menu_active is not defined%}
{%set menu_active=''%}
{%endif%}
{%if smenu_active is not defined%}
{%set smenu_active=''%}
{%endif%}
{%if tabActive is not defined%}
{%set tabActive=1%}
{%endif%}
{%block static_css%}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{'http://' ~ app.request.httpHost ~ preload(asset('bundles/acfres/css/theme/AdminLTE/AdminLTE.css'))}}">
<link rel="stylesheet" type="text/css"
	href="{{'http://' ~ app.request.httpHost ~ preload(asset('bundles/acfres/css/theme/AdminLTE/skins/_all-skins.css'))}}"
>
<link rel="stylesheet" type="text/css" href="{{'http://' ~ app.request.httpHost ~ asset('bundles/acfres/css/theme/Mpdf/style.css')}}">
{%endblock static_css%}
{%block html_body%}
<body class="skin-blue">
	<div class="wrapper">
		<div class="content-wrapper2">
			<section id="content" class="content">
				<div class="row">
					<div class="col-lg-12">
						<div class="box box-primary">
							<div class="box-body table-responsive">
								<table class="table table-condensed table-borderless">
									<tr>
										<td width="50%" class="text-left" style="background-color: white;"><a href="{{ path('_front_appelsdoffres') }}" class="center-block"><img
												src="{{'http://' ~ app.request.httpHost ~ preload(asset('bundles/acfres/images/logo_ao.jpg'))}}" alt="{{ sitename }}" class="img-responsive"
												style="width: 200px"
											></a></td>
										<td width="50%" class="text-right" style="background-color: white;"><a href="{{ path('_front_homepage') }}" class="center-block"><img
												src="{{'http://' ~ app.request.httpHost ~ preload(asset('bundles/acfres/images/logo_acf.jpg'))}}" alt="{{ sitename }}" class="img-responsive"
												style="width: 200px"
											></a></td>
									</tr>
									<tr>
										<td colspan="2" class="text-center">&nbsp;</td>
									</tr>
									<tr>
										<td colspan="2" class="text-center">
											<h2 class="text-center">
												{{('AoAuction')|trans}}
												:
												{{auction.ref}}
											</h2></td>
									</tr>
									<tr>
										<td colspan="2" class="text-center">&nbsp;</td>
									</tr>
									{% if auction.description is not empty %}
									<tr>
										<td colspan="2" class="text-center" style="background-color: white;">{{auction.description|raw}}</td>
									</tr>
									{% endif %}
									<tr>
										<td colspan="2" class="text-center">&nbsp;</td>
									</tr>
									<tr>
										<td style="background-color: white; padding: 7px;" valign="top">
											<table class="table table-condensed table-borderless">
												<tr>
													<td width="45%"><b>{{'AoAuction.nature'|trans|raw}} :</b></td>
													<td width="54%">{% if auction.nature is not empty %}
													{{('AoAuction.nature.'~auction.nature)|trans}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAuction.country'|trans|raw}} :</b></td>
													<td width="54%">{% if auction.country is not empty %}
													{{auction.country}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAuction.company'|trans|raw}} :</b></td>
													<td width="54%">{% if auction.company is not empty %}
													{{auction.company}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td colspan="2" class="text-center">&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAuction.dtOpen'|trans|raw}} :</b></td>
													<td width="54%">{% if auction.dtOpen is not empty %}
													{{auction.dtOpen|localeDate('medium')}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td colspan="2" class="text-center">&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAuction.adress'|trans|raw}} :</b></td>
													<td width="54%">{% if auction.adress is not empty %}
													{{auction.adress}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAuction.price'|trans|raw}} :</b></td>
													<td width="54%">{% if auction.price is not empty %}
													{{auction.price}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
											</table>
										</td>
										<td style="background-color: white; padding: 7px;" valign="top">
											<table class="table table-condensed table-borderless">
												<tr>
													<td width="45%"><b>{{'AoAuction.dtPublication'|trans|raw}} :</b></td>
													<td width="54%">{% if auction.dtPublication is not empty %}
													{{auction.dtPublication|localeDate('full')}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAuction.dtEnd'|trans|raw}} :</b></td>
													<td width="54%">{% if auction.dtEnd is not empty %}
													{{auction.dtEnd|localeDate('full')}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td colspan="2" class="text-center">&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAuction.source'|trans|raw}} :</b></td>
													<td width="54%">{% if auction.source is not empty %}
													{{auction.source}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
												<tr>
													<td width="45%"><b>{{'AoAuction.addRef'|trans|raw}} :</b></td>
													<td width="54%">{% if auction.addRef is not empty %}
													{{auction.addRef}}
													{%else%}
													{{'_NA'|trans}}
													{% endif %}
													&nbsp;</td>
												</tr>
											</table>
											<br>
										</td>
									</tr>
									{% if auction.img is not empty %}
									<tr>
										<td colspan="2" class="text-center">&nbsp;</td>
									</tr>
									<tr>
										<td colspan="2" class="text-center"><img src="{{'http://' ~ app.request.httpHost ~ asset('/res/Ve/'~auction.img)}}"
											class="img-responsive img-thumbnail center-block"
										></td>
									</tr>
									{% endif %}
								</table>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
		<footer class="main-footer2">
			<strong>Copyright &copy; {{ 'now'|date('Y') }} <a href="{{ url('_front_homepage') }}">ACEF-expert</a>.
			</strong> All rights reserved.
		</footer>
	</div>
</body>
{%endblock html_body%}
