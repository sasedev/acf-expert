{% extends 'AcfFrontBundle::front.html.twig' %}
{%block breadcrumb%}
<ol class="breadcrumb">
	<li><a href="{{ path('_info_homepage') }}">{{ faIco('dashboard') }} &nbsp; {{'breadcrumb.info'|trans|raw}}</a></li>
	<li class="active"><a href="{{ path('_info_bulletinInfo_editGet', {'uid': bulletinInfo.id}) }}">{{faIco('exclamation-triangle')}} &nbsp; {{'breadcrumb.info.bulletinInfo.edit'|trans({'%bulletinInfo%': bulletinInfo.num})|raw}}</a></li>
</ol>
{%endblock breadcrumb%}
{%block content%}
<div class="row">
	<div class="col-lg-12">
		<div class="box">
			<div class="box-header">
				<h3 class="box-title">{{ 'info.BulletinInfo.title'|trans|raw}}</h3>
				<h4 class="box-title">{{ 'info.BulletinInfo.desc'|trans({'%num%': bulletinInfo.num, '%dtStart%': bulletinInfo.dtStart|localeDate('medium')})|raw}}</h4>
			</div>
			<div class="box-body table-responsive">

				<table id="bulletinInfoTitleList" class="table table-bordered table-hover">
					<tbody>
					{% if bulletinInfo.titles|length != 0 %}
						{% for bulletinInfoTitle in bulletinInfo.titles %}
						<tr class="bg-gray-active">
							<th colspan="2" class="text-center">{{ bulletinInfoTitle.title }}</th>
							<th>{{'BulletinInfoContent.theme.label'|trans}}</th>
							<th>{{'BulletinInfoContent.jort.label'|trans}}</th>
							<th>{{'BulletinInfoContent.txtNum.label'|trans}}</th>
							<th>{{'BulletinInfoContent.artTxt.label'|trans}}</th>
							<th>{{'BulletinInfoContent.dtTxt.label'|trans}}</th>
							<th>{{'BulletinInfoContent.artCode.label'|trans}}</th>
							<th>{{'BulletinInfoContent.companyType.label'|trans}}</th>
							<th>{{'BulletinInfoContent.dtApplication.label'|trans}}</th>
						</tr>
						{% if bulletinInfoTitle.contents|length != 0 %}
						{% for bulletinInfoContent in bulletinInfoTitle.contents %}
						<tr class="bg-gray">
							<td colspan="2">{{bulletinInfoContent.title}}</td>
							<td>&nbsp;</td>
							<td>&nbsp;</td>
							<td>&nbsp;</td>
							<td>&nbsp;</td>
							<td>&nbsp;</td>
							<td>&nbsp;</td>
							<td>&nbsp;</td>
							<td>&nbsp;</td>
						</tr>
						<tr>
							<td>&nbsp;</td>
							<td>{{bulletinInfoContent.content|raw}}</td>
							<td>{{bulletinInfoContent.theme}}</td>
							<td>{{bulletinInfoContent.jort}}</td>
							<td>{{bulletinInfoContent.txtNum}}</td>
							<td>{{bulletinInfoContent.artTxt}}</td>
							<td>{{bulletinInfoContent.dtTxt}}</td>
							<td>{{bulletinInfoContent.artCode}}</td>
							<td>{{bulletinInfoContent.companyType}}</td>
							<td>{{bulletinInfoContent.dtApplication}}</td>
						</tr>
						{% endfor %}
						{% else %}
						<tr>
							<td colspan="10">&nbsp;<br></td>
						</tr>
						{% endif %}
						<tr>
							<td colspan="10">&nbsp;<br></td>
						</tr>
						{% endfor %}
					{% else %}
						<tr>
							<td colspan="10">{{ 'BulletinInfoTitle.empty'|trans|raw }}</td>
						</tr>
					{% endif %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
{%endblock content%}
