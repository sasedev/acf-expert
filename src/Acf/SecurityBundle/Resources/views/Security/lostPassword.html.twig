{%extends 'AcfSecurityBundle::security.html.twig'%}
{%block content%}
{{form_start(LostPasswordForm, {'method':'POST', 'action': path('_security_lost_password'), 'style': 'horizontal'})}}
<div class="login-box-body">
	<a href="{{ path('_front_homepage')}}"><img class="img img-responsive center-block" src="{{asset('bundles/acfres/images/logo_acf_footer.jpg')}}" alt="{{ sitename }}" style="height: 100px;"></a>
	{%if pagetitle is defined%}<hr><h1 class="text-center">{{pagetitle|raw}}</h1>{%endif%}
	<hr>
	{%include 'SasedevCommonsBootstrapBundle::flash.html.twig' with { 'close': false }%}
	{{form_row(LostPasswordForm.username, {'label_col': 4, 'widget_col': 8, 'attr': {'placeholder': '_security.username.placeholder'}})}}
	<br>
	{{form_row(LostPasswordForm.submit, {'label_col': 4, 'widget_col': 8, 'attr': {'class': 'bg-blue btn-block'} })}}
	{{form_row(LostPasswordForm.reset, {'label_col': 4, 'widget_col': 8, 'attr': {'class': 'bg-yellow btn-block'} })}}
	<hr>
	<p><a href="{{path('_security_register')}}">{{faIco('user-plus')}} {{ 'menu.newuser'|trans }}</a></p>
	<p><a href="{{path('_security_login')}}">{{faIco('user')}} {{ 'menu.login'|trans }}</a></p>
	<p><a href="{{path('_front_homepage')}}">{{faIco('home')}} {{ 'menu.home'|trans }}</a></p>
</div>
{{form_end(LostPasswordForm)}}
{%endblock content%}