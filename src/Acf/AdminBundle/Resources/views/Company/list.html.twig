{% extends 'AcfFrontBundle::front.html.twig' %}
{%block static_css%}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{preload(asset('bundles/acfres/css/dataTables/dataTables.bootstrap.css'))}}">
<link rel="stylesheet" type="text/css" href="{{preload(asset('bundles/acfres/css/bootstrap/modal/2.2.5-bs3patch.css'))}}">
<link rel="stylesheet" type="text/css" href="{{preload(asset('bundles/acfres/css/bootstrap/modal/2.2.5.css'))}}">
{%endblock static_css%}
{%block end_static_js%}
{{ parent() }}
<script type="text/javascript" src="{{preload(asset('bundles/acfres/js/dataTables/jquery.dataTables.js'))}}"></script>
<script type="text/javascript" src="{{preload(asset('bundles/acfres/js/dataTables/dataTables.bootstrap.js'))}}"></script>
<script type="text/javascript" src="{{preload(asset('bundles/acfres/js/bootstrap/modal/2.2.5manager.js'))}}"></script>
<script type="text/javascript" src="{{preload(asset('bundles/acfres/js/bootstrap/modal/2.2.5.js'))}}"></script>
{%endblock end_static_js%}
{%block end2_dynamic_jstxt%}
$(function() {
	{% if companies|length != 0 %}
	$('#companyList').dataTable({
		{%if app.request.locale != 'en'%}
		"language": {"url": '{{preload(asset('bundles/acfres/css/dataTables/i18n/'~app.request.locale~'.json'))}}'},
		{% endif %}
		"columns": [
			null,
			null,
			null,
			null,
			null,
			null,
			null,
			null,
			null,
			{ "searchable": false, "sortable": false }
		],
		"pageLength": 10,
		fnDrawCallback : function() {
			$('.deleteConfirmCompany').on("click", function(e) {
				e.preventDefault();
				var lnk = $(this).attr('href');
				modalDeleteBtn = $('#deleteConfirmCompany').find('.danger');
				modalDeleteBtn.attr('href', lnk);
				$('#deleteConfirmCompany').modal('show');
			});
		}
	});
	{% endif %}
});
{%endblock end2_dynamic_jstxt%} {%block breadcrumb%}
<ol class="breadcrumb">
	<li><a href="{{ path('_admin_homepage') }}">{{ faIco('dashboard') }} &nbsp; {{'breadcrumb.admin'|trans|raw}}</a></li>
	<li class="active"><a href="{{ path('_admin_company_list') }}">{{faIco('building')}} &nbsp; {{'breadcrumb.company.list'|trans|raw}}</a></li>
</ol>
{%endblock breadcrumb%} {%block content%}
<div class="row">
	<div class="col-lg-12">
		<div class="well well-sm text-right">
			<a href="{{ path('_admin_company_addGet') }}" class="btn btn-primary">{{ glyphIco('plus') }} {{ 'action.add'|trans }}</a>
			<a href="{{ path('_admin_company_exportexcel') }}" class="btn btn-success">{{ faIco('file-excel-o') }} {{ 'action.excel'|trans }}</a>
		</div>
		<div class="box">
			<div class="box-header">
				<h3 class="box-title">{{ 'Company.tlabel.list'|trans|raw}}</h3>
			</div>
			<div class="box-body table-responsive">
				<table id="companyList" class="table table-bordered table-hover">
					<thead>
						<tr>
							<th>{{ 'Company.ref.label'|trans|raw }}</th>
							<th>{{ 'Company.corporateName.label'|trans|raw }}</th>
							<th>{{ 'Company.type.label'|trans|raw }}</th>
							<th>{{ 'Company.sectors.label'|trans|raw }}</th>
							<th>{{ 'Company.fisc.label'|trans|raw }}</th>
							<th>{{ 'Company.docs.label'|trans|raw }}</th>
							<th>{{ 'Company.buys.label'|trans|raw }}</th>
							<th>{{ 'Company.sales.label'|trans|raw }}</th>
							<th>{{ 'Company.monthDocsLimit.label'|trans|raw }}</th>
							<th>{{ 'action'|trans|raw }}</th>
						</tr>
					</thead>
					<tbody>
						{% if companies|length != 0 %}
						{% for company in companies %}
						<tr>
							<td>{{ company.ref }}</td>
							<td>{{ company.corporateName }}</td>
							<td>{{ company.type.label }}</td>
							<td>
								{%if company.sectors|length==0%}
								{{bsLabel('_NONE'|trans)}}
								{%else%}
								<ul class="list-unstyled">
									{% for sector in company.sectors %}
									<li>{{sector.label}}</li> {% endfor %}
								</ul>
								{%endif%}
							</td>
							<td>{{ company.fisc }}</td>
							<td>{{ company.docs|length }}</td>
							<td>{{ company.purchases|length }}</td>
							<td>{{ company.sales|length }}</td>
							<td>{{company.currentMonthDocs}}/{{company.monthDocsLimit}}</td>
							<td>
								<a class="btn btn-sm btn-info" href="{{path('_admin_company_editGet',{'uid':company.id})}}">{{ glyphIco('edit') }} {{ 'action.edit'|trans }}</a>
								<a class="btn btn-sm btn-danger deleteConfirmCompany" href="{{path('_admin_company_delete',{'uid':company.id})}}">{{ glyphIco('trash') }} {{ 'action.delete'|trans }}</a>
							</td>
						</tr>
						{% endfor %}
						{% else %}
						<tr>
							<td colspan="9">{{ 'Company.empty'|trans|raw }}</td>
						</tr>
						{% endif %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div id="deleteConfirmCompany" class="modal fade in" tabindex="-1" style="display: none;">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3 class="text-center">{{'Company.delete.confirm.title'|trans|raw}}</h3>
	</div>
	<div class="modal-body">{{'Company.delete.confirm.txt'|trans|raw}}</div>
	<div class="modal-footer">
		<a href="" class="btn btn-xs btn-danger danger">{{'_yes'|trans|raw}}</a>
		<button type="button" class="btn btn-xs btn-default" data-dismiss="modal">{{'_no'|trans|raw}}</button>
	</div>
</div>
{%endblock content%}
