{% extends 'AcfFrontBundle::front.html.twig' %}
{%block breadcrumb%}
<ol class="breadcrumb">
	<li><a href="{{ path('_admin_homepage') }}">{{ faIco('dashboard') }} &nbsp; {{'breadcrumb.admin'|trans|raw}}</a></li>
	<li><a href="{{ path('_admin_job_list') }}">{{faIco('leaf')}} &nbsp; {{'breadcrumb.job.list'|trans|raw}}</a></li>
	<li class="active"><a href="{{ path('_admin_job_addGet') }}">{{glyphIco('plus')}} &nbsp; {{'breadcrumb.job.add'|trans|raw}}</a></li>
</ol>
{%endblock breadcrumb%}
{%block content%}
<div class="row">
	<div class="col-lg-12">
		<div class="well well-sm text-right">
			<a href="{{ path('_admin_job_list') }}" class="btn btn-primary">{{ faIco('th') }} {{ 'action.list'|trans }}</a>
		</div>
		<div class="box box-primary">
			<div class="box-header">
				<h3 class="box-title">{{ 'Job.tlabel.add'|trans|raw}}</h3>
			</div>
			<div class="box-body">
				{{form_start(JobNewForm, {'method':'POST', 'action': path('_admin_job_addPost'), 'style': 'horizontal'})}}
				{{form_row(JobNewForm.label, {'label_col': 3, 'widget_col': 8})}}
				<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{glyphIco('save')}} {{'action.btnAdd'|trans|raw}}</button></div></div>
				{{form_end(JobNewForm)}}
			</div>
		</div>
	</div>
</div>
{%endblock content%}
