{% extends 'AcfFrontBundle::front.html.twig' %}
{%block breadcrumb%}
<ol class="breadcrumb">
	<li><a href="{{ path('_admin_homepage') }}">{{ faIco('dashboard') }} &nbsp; {{'breadcrumb.admin'|trans|raw}}</a></li>
	<li><a href="{{ path('_admin_feedRead_list') }}">{{faIco('newspaper-o')}} &nbsp; {{'breadcrumb.feedRead.list'|trans|raw}}</a></li>
	<li class="active"><a href="{{ path('_admin_feedRead_editGet', {'uid': feedRead.id}) }}">{{glyphIco('edit')}} &nbsp; {{'breadcrumb.feedRead.edit'|trans({'%feedRead%': feedRead.url})|raw}}</a></li>
</ol>
{%endblock breadcrumb%}
{%block content%}
<div class="row">
	<div class="col-lg-12">
		<div class="well well-sm text-right">
			<a href="{{ path('_admin_feedRead_list') }}" class="btn btn-primary">{{ faIco('th') }} {{ 'action.list'|trans }}</a>
			<a href="{{ path('_admin_feedRead_addGet') }}" class="btn btn-primary">{{ glyphIco('plus') }} {{ 'action.add'|trans }}</a>
		</div>
		<div class="nav-tabs-custom">
			<ul class="nav nav-tabs">
				<li {%if tabActive==1%} class="active"{%endif%}><a href="#overview" data-toggle="tab">{{'FeedRead.tab.overview'|trans|raw}}</a></li>
				<li {%if tabActive==2%} class="active"{%endif%}><a href="#edit" data-toggle="tab">{{'FeedRead.tab.edit'|trans|raw}}</a></li>
			</ul>
			<div class="tab-content">
				<div class="tab-pane fade{%if tabActive==1%} in active{%endif%}" id="overview">
					<div class="panel box box-primary">
						<div class="box-header"><h3 class="box-title">{{'FeedRead.tlabel.overview'|trans}}</h3></div>
						<div class="box-body">
							<div class="row">
								<div class="col-lg-3 text-right">{{'FeedRead.url'|trans|raw}} :</div>
								<div class="col-lg-9">{{feedRead.url}}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'FeedRead.nbrDays'|trans|raw}} :</div>
								<div class="col-lg-9">{{feedRead.nbrDays}}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'FeedRead.nbrItems'|trans|raw}} :</div>
								<div class="col-lg-9">{{feedRead.nbrItems}}&nbsp;</div>
								<div class="col-lg-12">&nbsp;</div>
								<div class="col-lg-3 text-right">{{'FeedRead.dtCrea'|trans|raw}} :</div>
								<div class="col-lg-9">{{feedRead.dtCrea|localeDate('medium')}} {{'_at'|trans}} {{feedRead.dtCrea|localeDate('none', 'short')}}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'FeedRead.dtUpdate'|trans|raw}} :</div>
								<div class="col-lg-9">{{feedRead.dtUpdate|localeDate('medium')}} {{'_at'|trans}} {{feedRead.dtUpdate|localeDate('none', 'short')}}&nbsp;</div>
								<br>
							</div>
						</div>
					</div>
				</div>
				<div class="tab-pane fade{%if tabActive==2%} in active{%endif%}" id="edit">
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title">{{'FeedRead.tlabel.editUrl'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(FeedReadUpdateUrlForm, {'method':'POST', 'action': path('_admin_feedRead_editPost', {'uid': feedRead.id}), 'style': 'horizontal'})}}
							{{form_row(FeedReadUpdateUrlForm.url, {'label_col': 3, 'widget_col': 8 })}}
							<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{glyphIco('save')}} {{'action.btnEdit'|trans|raw}}</button></div></div>
							{{form_end(FeedReadUpdateUrlForm)}}
						</div>
					</div>
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title">{{'FeedRead.tlabel.editNbrDays'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(FeedReadUpdateNbrDaysForm, {'method':'POST', 'action': path('_admin_feedRead_editPost', {'uid': feedRead.id}), 'style': 'horizontal'})}}
							{{form_row(FeedReadUpdateNbrDaysForm.nbrDays, {'label_col': 3, 'widget_col': 4 })}}
							<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{glyphIco('save')}} {{'action.btnEdit'|trans|raw}}</button></div></div>
							{{form_end(FeedReadUpdateNbrDaysForm)}}
						</div>
					</div>
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title">{{'FeedRead.tlabel.editNbrItems'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(FeedReadUpdateNbrItemsForm, {'method':'POST', 'action': path('_admin_feedRead_editPost', {'uid': feedRead.id}), 'style': 'horizontal'})}}
							{{form_row(FeedReadUpdateNbrItemsForm.nbrItems, {'label_col': 3, 'widget_col': 4 })}}
							<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{glyphIco('save')}} {{'action.btnEdit'|trans|raw}}</button></div></div>
							{{form_end(FeedReadUpdateNbrItemsForm)}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{%endblock content%}
