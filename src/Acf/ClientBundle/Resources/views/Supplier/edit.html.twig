						{% if companyUser.addDocs == constant('CAN', companyUser) %}
						<div class="panel box box-danger">
							<div class="box-header">
								<h4 class="box-title"><a href="#collapse31" data-parent="#accordion03" data-toggle="collapse">{{'Supplier.tlabel.docs.add'|trans}}</a></h4>
							</div>
							<div id="collapse31" class="panel-collapse collapse{%if tabActive==3 and stabActive==1%} in{%endif%}">
								<div class="box-body">
									{{form_start(DocNewForm, {'method':'POST', 'action': path('_client_supplier_editGet', {'uid': supplier.id}), 'style': 'horizontal'})}}
									{{form_row(DocNewForm.company, {'label_col': 3, 'widget_col': 8, 'attr': {'row_class': 'hidden'} })}}
									{{form_row(DocNewForm.fileName, {'label_col': 3, 'widget_col': 8 })}}
									{{form_row(DocNewForm.description, {'label_col': 3, 'widget_col': 8, 'attr': {'class':'wysiwyg'}})}}
									<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit" {% if supplier.company.currentMonthDocs >= supplier.company.monthDocsLimit %} disabled="disabled"{% endif %}>{{glyphIco('save')}} {{'action.btnAdd'|trans|raw}} ({{supplier.company.currentMonthDocs}}/{{supplier.company.monthDocsLimit}})</button></div></div>
									{{form_end(DocNewForm)}}
								</div>
							</div>
						</div>
						{% endif %}
						{% if companyUser.editDocs == constant('CAN', companyUser) %}
						<div class="panel box box-danger">
							<div class="box-header">
								<h4 class="box-title"><a href="#collapse32" data-parent="#accordion03" data-toggle="collapse">{{'Supplier.tlabel.docs.edit'|trans}}</a></h4>
							</div>
							<div id="collapse32" class="panel-collapse collapse{%if tabActive==3 and stabActive==2%} in{%endif%}">
								<div class="box-body">
									{{form_start(SupplierUpdateDocsForm, {'method':'POST', 'action': path('_client_supplier_editPost', {'uid': supplier.id}), 'style': 'horizontal'})}}
