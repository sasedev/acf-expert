{%block end2_dynamic_jstxt%}
$(function() {
	$('textarea.wysiwyg').each(function() {
		var options = {
			script_url : '{{preload(asset('bundles/acfres/js/tinymce/tinymce.min.js'))}}',
			theme: "modern",
			plugins: [ "advlist autolink lists link image charmap preview hr anchor pagebreak", "searchreplace wordcount visualblocks visualchars code fullscreen", "nonbreaking save table contextmenu directionality", "template paste textcolor" ],
			{%if app.request.locale != 'en'%}
			language : '{{ app.request.locale }}',
			{% endif %}
			toolbar: "insertfile undo redo | styleselect | bold italic | forecolor backcolor | alignleft aligncenter alignright alignjustify | preview "
		};
		$this = $(this);
		if($this.is('[required]')) {
			options.oninit = function(editor) {
				editor.on('change', function(e) {
					editor.save();
				});
			}
		}
		$this.tinymce(options);
	});

	{% if companyUser.editSuppliers == constant('CAN', companyUser) %}
	$('#SupplierUpdateForm_country').chosen({width: "100%", disable_search_threshold: 10});

	var isSupplierMoralType = $('input[name="SupplierUpdateForm\\[physicaltype\\]"]:checked').val();

	if (isSupplierMoralType == {{constant('PHTYPE_MORAL', supplier)}}) {
		$('#cinSupplier').hide();
		$('#passportSupplier').hide();
		$('#commercialRegisterSupplier').show();
		$('#SupplierUpdateForm_cin').val('');
		$('#SupplierUpdateForm_passport').val('');
	} else {
		$('#cinSupplier').show();
		$('#passportSupplier').show();
		$('#commercialRegisterSupplier').hide();
		$('#SupplierUpdateForm_commercialRegister').val('');
	}

	$('input[name="SupplierUpdateForm\\[physicaltype\\]"]').change(function(){
		if ($(this).is(':checked')) {
			$('#cinSupplier').toggle(300);
			$('#passportSupplier').toggle(300);
			$('#commercialRegisterSupplier').toggle(300);
			var pysicalTypeSupplier = $(this).val();
			if (pysicalTypeSupplier == {{constant('PHTYPE_MORAL', supplier)}}) {
				$('#SupplierUpdateForm_cin').val('');
				$('#SupplierUpdateForm_passport').val('');
			} else {
				$('#SupplierUpdateForm_commercialRegister').val('');
			}
		}
	});
	{% endif %}

	{% if companyUser.editDocs == constant('CAN', companyUser) %}
	$('#SupplierUpdateDocsForm_docs').bootstrapDualListbox({
		nonselectedlistlabel: 'Non-selected',
		selectedlistlabel: 'Selected',
		preserveselectiononmove: 'moved',
		moveonselect: false,
		initialfilterfrom: ''
	});
	{% endif %}

	{% if companyUser.addDocs == constant('CAN', companyUser) %}
	$("#DocNewForm_fileName").fileinput({'showUpload':false, browseClass: "btn btn-success", browseLabel: " Documents", browseIcon: '{{faIco('folder-open')}}', removeClass: "btn btn-danger", removeLabel: "Delete", removeIcon: '{{glyphIco('trash')}}'});
	{% endif %}

	{% if supplier.docs|length != 0 %}
	$('#docList').dataTable({
		{%if app.request.locale != 'en'%}
		"language": {"url": '{{preload(asset('bundles/acfres/json/dataTables/i18n/'~app.request.locale~'.json'))}}'},
		{% endif %}
		"columns": [
			null,
			null,
			null,
			null,
			null,
			null,
			{ "searchable": false, "sortable": false }
		]
	});
	{% endif %}

});
{%endblock end2_dynamic_jstxt%}
