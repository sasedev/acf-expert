								<div class="col-lg-9">{{supplier.label}}&nbsp;</div>
								<div class="col-lg-12">&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.number'|trans|raw}} :</div>
								<div class="col-lg-9">{{suppliersPrefix~supplier.numberFormated}}&nbsp;</div>
								<div class="col-lg-12">&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.fisc'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.fisc is not empty%}{{supplier.fisc}}{%else%}{{bsLabelWarning('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								{% if supplier.physicaltype == constant('PHTYPE_MORAL', supplier) %}
								<div class="col-lg-3 text-right">{{'Supplier.commercialRegister'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.commercialRegister is not empty%}{{supplier.commercialRegister}}{%else%}{{bsLabelWarning('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								{% else %}
								<div class="col-lg-3 text-right">{{'Supplier.cin'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.cin is not empty%}{{supplier.cin}}{%else%}{{bsLabelWarning('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.passport'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.passport is not empty%}{{supplier.passport}}{%else%}{{bsLabelWarning('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								{% endif %}
								<div class="col-lg-3 text-right">{{'Supplier.streetNum'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.streetNum is not empty%}{{supplier.streetNum}}{%else%}{{bsLabel('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.address'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.address is not empty%}{{supplier.address}}{%else%}{{bsLabel('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.address2'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.address2 is not empty%}{{supplier.address2}}{%else%}{{bsLabel('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.town'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.town is not empty%}{{supplier.town}}{%else%}{{bsLabel('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.zipCode'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.zipCode is not empty%}{{supplier.zipCode}}{%else%}{{bsLabel('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.country'|trans|raw}} :</div>
