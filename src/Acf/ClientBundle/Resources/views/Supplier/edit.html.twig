								<div class="col-lg-3 text-right">{{'Supplier.phone'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.phone is not empty%}{{supplier.phone}}{%else%}{{bsLabel('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.mobile'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.mobile is not empty%}{{supplier.mobile}}{%else%}{{bsLabel('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.fax'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.fax is not empty%}{{supplier.fax}}{%else%}{{bsLabel('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.email'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.email is not empty%}{{supplier.email}}{%else%}{{bsLabel('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.otherInfos'|trans|raw}} :</div>
								<div class="col-lg-9">{%if supplier.otherInfos is not empty%}{{supplier.otherInfos|raw}}{%else%}{{bsLabel('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
								<div class="col-lg-12">&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Supplier.dtCrea'|trans|raw}} :</div>
								<div class="col-lg-9">{{supplier.dtCrea|localeDate('medium')}} {{'_at'|trans}} {{supplier.dtCrea|localeDate('none', 'short')}}&nbsp;</div>
