						<div class="box-header"><h3 class="box-title">{{'Supplier.tlabel.edit'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(SupplierUpdateForm, {'method':'POST', 'action': path('_client_supplier_editPost', {'uid': supplier.id}), 'style': 'horizontal'})}}
							{{form_row(SupplierUpdateForm.label, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.number, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.fisc, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.physicaltype, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.commercialRegister, {'label_col': 3, 'widget_col': 8, 'attr':{'row_id':'commercialRegisterCustomer'} })}}
							{{form_row(SupplierUpdateForm.cin, {'label_col': 3, 'widget_col': 8, 'attr':{'row_id':'cinCustomer'} })}}
							{{form_row(SupplierUpdateForm.passport, {'label_col': 3, 'widget_col': 8, 'attr':{'row_id':'passportCustomer'} })}}
							{{form_row(SupplierUpdateForm.streetNum, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.address, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.address2, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.town, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.zipCode, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.country, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.email, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.phone, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.mobile, {'label_col': 3, 'widget_col': 8 })}}
							{{form_row(SupplierUpdateForm.fax, {'label_col': 3, 'widget_col': 8 })}}
