						<div class="box-header"><h3 class="box-title">{{'Supplier.tlabel.overview'|trans}}</h3></div>
						<div class="box-body">
							<div class="row">
								<div class="col-lg-3 text-right">{{'Supplier.company'|trans|raw}} :</div>
								<div class="col-lg-9"><a href="{{ path('_client_company_editGet', {'uid': supplier.company.id}) }}">{{supplier.company.corporateName}}</a>&nbsp;</div>
