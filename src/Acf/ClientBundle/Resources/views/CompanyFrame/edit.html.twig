						</div>
					</div>
				</div>
				{% if companyUser.editFrames == constant('CAN', companyUser) %}
				<div class="tab-pane fade{%if tabActive==2%} in active{%endif%}" id="edit">
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title">{{'CompanyFrame.tlabel.edit'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(CompanyFrameUpdateForm, {'method':'POST', 'action': path('_client_companyFrame_editPost', {'uid': companyFrame.id}), 'style': 'horizontal'})}}
