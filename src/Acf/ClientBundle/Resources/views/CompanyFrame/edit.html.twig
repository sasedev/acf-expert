								<div class="col-lg-3 text-right">{{'CompanyFrame.mobile'|trans|raw}} :</div>
								<div class="col-lg-9">{%if companyFrame.mobile is not empty%}{{companyFrame.mobile}}{%else%}{{bsLabel('_NA'|trans|raw)}}{%endif%}&nbsp;</div>
